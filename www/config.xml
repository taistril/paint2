<gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
<gap:splash src="splash/android/splash-POI4-ldpi-portrait.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash/android/splash-POI4-mdpi-portrait.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash/android/splash-POI4-hdpi-portrait.png" gap:platform="android" gap:density="hdpi" />
<gap:splash src="splash/android/splash-POI4-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
<gap:splash src="splash/android/splash-POI4-ldpi-landscape.png" gap:platform="android" gap:qualifier="land-ldpi" />
<gap:splash src="splash/android/splash-POI4-mdpi-landscape.png" gap:platform="android" gap:qualifier="land-mdpi" />
<gap:splash src="splash/android/splash-POI4-hdpi-landscape.png" gap:platform="android" gap:qualifier="land-hdpi" />
<gap:splash src="splash/android/splash-POI4-xhdpi-landscape.png" gap:platform="android" gap:qualifier="land-xhdpi" />
